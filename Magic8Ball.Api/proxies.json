{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    //"proxyWebApp": {
    //  "matchCondition": {
    //    "route": "/{*restOfPath}"
    //  },
    //  "backendUri": "%Magic8Ball_WebApp_URL%/{restOfPath}"
    //},
    "proxyRootRedirect": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/"
      },
      "backendUri": "http://%WEBSITE_HOSTNAME%/api/app"
    },
    "proxyAppRedirect": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/app"
      },
      "backendUri": "http://%WEBSITE_HOSTNAME%/api/app"
    },
    "proxyAskRedirect": {
      "matchCondition": {
        "methods": [ "GET", "POST" ],
        "route": "/ask"
      },
      "backendUri": "http://%WEBSITE_HOSTNAME%/api/ask"
    },
    "proxyAskQuestionRedirect": {
      "matchCondition": {
        "methods": [ "GET", "POST" ],
        "route": "/ask/{*restOfPath}"
      },
      "backendUri": "http://%WEBSITE_HOSTNAME%/api/ask?question={restOfPath}"
    }
  }
}